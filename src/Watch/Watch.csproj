<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <PublishWithAspNetCoreTargetManifest>false</PublishWithAspNetCoreTargetManifest>
    
    <AssemblyName>watch</AssemblyName>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>watch</ToolCommandName>
    <Version>0.1.9</Version>
    <Authors>Jorel Fermin</Authors>
    <PackageLicenseUrl>https://raw.githubusercontent.com/jorelius/Watch/master/LICENSE.txt</PackageLicenseUrl>
    <PackageProjectUrl></PackageProjectUrl>
    <RepositoryUrl>https://github.com/jorelius/Watch</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <Product>Watch</Product>
    <Copyright>Jorel Fermin</Copyright>
    <Description>Trigger command when a watched resource (e.g. Clipboard, Filesystem, Http, Ftp, etc) changes.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="PowerArgs" Version="3.6.0" />
    <PackageReference Include="TextCopy" Version="1.5.1" />
  </ItemGroup>

</Project>
